<div class="container px-5 px-sm-0">
 <div class="row">
  <div class="col-md-3">

    <h2>User info</h2>

    <%= image_tag @user.get_image %>

  <table class="table">



    <tbody>
      <tr>
        <td>name</td>
        <td><%= @user.name %></td>
      </tr>
      <tr>
        <td>introduction</td>
        <td><%= @user.introduction %></td>
      </tr>
    </tbody>

  </table>

  <div class="row">
    <%= link_to edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block edit_user_id", method: :get do %>
    <i class="fas fa-user-cog"></i>
    <% end %>
  </div>




      <div class="col-md-8 offset-md-1">
      
        <h2>Book detail</h2>
        <table class="table">
            <tbody>
              <tr>
                <td><%= @user.name %></td>
                <td><%= @book.title %></td>
                <td><%= @book.body %></td>
      
                <td>
                  <%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success edit_book_id" %>
                </td>
      
                <td>
                  <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-sm btn-danger destroy_book_id" %>
                </td>
      
              </tr>
            </tbody>
        </table>
      
      </div>
      
    </div>
  </div>
</div>
