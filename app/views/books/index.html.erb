 <div class="row">
  <div class="col-md-3">
 
    <h2>User info</h2>
    
  <% @books.each do |book| %>
    
    <% if book.image.attached? %>
      <%= image_tag book.image, size: "100x100" %>
    <% else %>
      <%= image_tag 'no_image', size: "100x100" %>
    <% end %>
    
  <% end %>
  
  










    <div class="info">

      <h2>New book</h2>

        <%= form_with model: Book.new do |f| %>
          <label>Title</label>
            <%= f.text_field :title %>

          <label>Opinion</label>
            <%= f.text_area :body %>

         <%= f.submit 'Create Book' %>
        <% end %>



    </div>
  </div>
</div>
