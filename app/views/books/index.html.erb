
<div class="container px-5 px-sm-0">
 <div class="row">
  <div class="col-md-3">

    <h2>User info</h2>

  <% @books.each do |book| %>

    <%= link_to book_path(book.id) do %>
      <%= image_tag book.get_image %>
    <% end %>

  <% end %>


<% Book.all.each do |book| %>

  <table class="table">
    <tbody>
      <tr>
        <td>name</td>
        <td><%= book.name %></td>
      </tr>
      <tr>
        <td>introduction</td>
        <td><%= book.introduction %></td>
      </tr>
    </tbody>

  </table>

  <div class="row">
    <%= link_to "edit", edit_book_path(book.id) %>
  </div>

<% end %>

      <h2>New book</h2>

        <%= form_with model: Book.new do |f| %>

        <div class="fld">

          <label>Title</label>
            <%= f.text_field :title %>

        </div>

        <div class="fid">

          <label>Opinion</label>
            <%= f.text_area :body %>

        </div>

         <%= f.submit 'Create Book' %>
        <% end %>

    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">

        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <tr>
            <td></td>
          </tr>
        </tbody>
      </table>
    </div>


  </div>
</div>
