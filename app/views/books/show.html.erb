<div class="col-md-8 offset-md-1">

  <h2>Book detail</h2>
  <table class="table">
    <% Book.all.each do |book| %>
      <tbody>
        <tr>
          <td><%= @user.name %></td>
          <td><%= book.title %></td>
          <td><%= book.body %></td>

          <td><%= link_to "Edit", edit_book_path(book.id) %></td>
          <td><%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "本当に消しますか？" %></td>
        </tr>
      </tbody>
    <% end %>
  </table>

</div>
