



<div class="container px-5 px-sm-0">
 <div class="row">
  <div class="col-md-3">

    <h2>User info</h2>

    <%= image_tag @user.get_profile_image, size:"100x100" %>

  <table class="table">



    <tbody>
      <tr>
        <th>name</th>
        <th><%= @user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
      </tr>
    </tbody>

  </table>

  <div class="row">
    <%= link_to edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block edit_user_id", method: :get do %>
    <i class="fas fa-user-cog"></i>
    <% end %>
  </div>

  <h2 class="mt-3">New book</h2>

        <%= form_with model: Book.new do |f| %>

        <div class="form-group">

          <label for="book_title">Title</label>
              <%= f.text_field :title, class: "form-control book_title" %>

        </div>

        <div class="form-group">

          <label for="book_opinion">Opinion</label>
            <%= f.text_area :body, class: "form-control book_body" %>

        </div>

         <%= f.submit 'Create Book', class: "btn btn-success" %>
        <% end %>

    </div>




      <div class="col-md-8 offset-md-1">

        <h2>Book detail</h2>
        <table class="table">
            <tbody>
              <tr>
                <td>
                  <%= link_to user_path(@user.id) do %>
                    <%= image_tag @user.get_profile_image %>
                  <% end %>
                  <br>
                  <%= link_to @user.name, user_path(@user.id) %>
                </td>
                <td><%= link_to @book.title, book_path(@book.id) %></td>
                <td><%= @book.body %></td>

              <% if @book.user == current_user %>
                <td>
                  <%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success edit_book_id" %>
                </td>


                <td>
                  <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-sm btn-danger destroy_book_id" %>
                </td>
              <% end %>

              </tr>
            </tbody>
        </table>

      </div>

    </div>
  </div>
</div>
